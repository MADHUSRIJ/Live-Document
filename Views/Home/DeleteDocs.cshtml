@model IEnumerable<Live_Document___Rich_Text_Editor.Models.DocumentEntityModel>

@{
    ViewData["Title"] = "DeleteDocs";
}



<style>
    .cute-btn {
        background-color: rgba(0, 95, 167, 1);
        color: #fff;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 1em;
        width: 30%;
        border: none;
        margin-top: 2em;
        transition: all 0.3s ease-in-out;
    }

        .cute-btn:hover {
            background-color: #fff;
            color: rgba(0, 95, 167, 1);
            box-shadow: 0px 0px 10px rgba(0, 95, 167, 1);
        }
</style>

<h1>DeleteDocs</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="" style="background-color:aliceblue;padding:2em;height:30em;overflow: auto;">
    @foreach (var data in Model)
    {
        <h1> @data.DocumentTitle</h1>
        <p style="margin-top: 2em;"> @data.Content</p>
    }
    
    <form asp-action="DeleteDocs">
        <input type="submit" value="Delete" class="cute-btn" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
