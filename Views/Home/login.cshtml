@{
    ViewData["Title"] = "Login";
}

@model UserModel;

<style>
    .cute-btn {
        background-color: rgba(0, 95, 167, 1);
        color: #fff;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 1em;
        width: 100%;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .cute-btn:hover {
            background-color: #fff;
            color: rgba(0, 95, 167, 1);
            box-shadow: 0px 0px 10px rgba(0, 95, 167, 1);
        }
</style>

<div class="row">
    <div class="col-md-7">
        <img src="https://img.freepik.com/free-vector/appointment-booking-with-calendar_52683-39831.jpg" class="img-fluid" alt="Image">
    </div>
    <div class="col-md-5" style="margin-top:2em;">
        <a class="" style="padding-right: 4em;color:rgba(0, 95, 167, 1);font-weight:bold;font-size:1.5em;"><i style="color:rgba(0, 95, 167, 1);" class="bi bi-balloon-heart"></i>Documenty.</a>

        <h2 class="" style="margin-top:1em;color:white">
            Login to your account!
        </h2>
        <p class="text-light font-monospace" style="margin-bottom:2em;">
            Login to your account to write on you scrips!
        </p>


        <form method="post">
            <div class="form-group" style="margin-bottom:2em;">
                <label for="title" style="margin-bottom:1em;">User Name</label>
                <input type="text" name="userName" id="userName" placeholder="Username" asp-for="username" class="form-control">
            </div>
            <div class="form-group">
                <label for="purpose" style="margin-bottom:1em;">Password</label>
                <input type="password" name="password" id="pwd" placeholder="Password" asp-for="Password" class="form-control">
            </div>
            <a href="" class="text-light" style=""> <button class="cute-btn" type="submit" style="margin-top: 2em;width: 10em;margin-right:2em;">Login</button></a>
            

        </form>
    </div>

</div>