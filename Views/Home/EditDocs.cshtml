@model Live_Document___Rich_Text_Editor.Models.DocumentEntityModel

@{
    ViewData["Title"] = "EditDocs";
    Layout = "~/Views/Shared/LayoutHome.cshtml";
}



<style>
    .cute-btn {
        background-color: rgba(0, 95, 167, 1);
        color: #fff;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 1em;
        width: 30%;
        border: none;
        margin-top: 2em;
        transition: all 0.3s ease-in-out;
    }

        .cute-btn:hover {
            background-color: #fff;
            color: rgba(0, 95, 167, 1);
            box-shadow: 0px 0px 10px rgba(0, 95, 167, 1);
        }
</style>

<div class="row">
    <div class="col-md-7">
        <img src="https://st.depositphotos.com/1695366/1400/v/600/depositphotos_14001458-stock-illustration-cartoon-man-writing.jpg" alt="Image" style="height:30em; width:30em;">

    </div>
    <div class="col-md-4">
        <h3 class="text-light">Edit Document</h3>
        <form asp-action="EditDocs" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="docId" value="@Model.DocumentId" />
            <div class="form-group" style="margin-bottom:2em;">
                <label asp-for="DocumentTitle" class="control-label" style="margin-bottom:1em;"></label>
                <input asp-for="DocumentTitle" class="form-control" value="@Model.DocumentTitle" />
                <span asp-validation-for="DocumentTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label" style="margin-bottom:1em;"></label>
                <textarea asp-for="Content" class="form-control" style="height: 20em;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="cute-btn" />
            </div>
        </form>
    </div>
    
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
